{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['product', 'product_rank'] %}

{% block title %}{{ 'admin.product_rank.move_rank.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.product_rank.move_rank.sub_title'|trans }}{% endblock %}


{% block javascript %}
<script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.core.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.widget.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.mouse.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.sortable.min.js', 'admin') }}"></script>
    <script>
        $(function() {

            var setupContextMenu = function($children) {
                var childrenMax = $children.length - 1;
                $children.each(function(index, obj) {
                    // up表示切替
                    if (index > 0) {
                        $(this).find(".admin_product_product_rank_up").show();
                    } else {
                        $(this).find(".admin_product_product_rank_up").hide();
                    }
                    if (index < childrenMax) {
                        $(this).find(".admin_product_product_rank_down").show();
                    } else {
                        $(this).find(".admin_product_product_rank_down").hide();
                    }
                });
            };

            setupContextMenu($(".sortable-container > .sortable-item"));

            $("#product_rank_list > .sortable-container").sortable({
                items: '> .sortable-item',
                cursor: 'move',
                update: function(e, ui) {
                    $('body').append($('<div class="modal-backdrop show"></div>'));
                    window.$children = $(ui.item).parent().children();
                    updateRank(ui.item);
                }
            });

            // 並び替え後にrankを更新
            var updateRank = function(item) {
                var position = $(item).parent().children().index(item) + 1;
                $.ajax({
                    url: '{{ url('admin_product_product_rank_move_rank') }}',
                    type: 'POST',
                    data: {
                        'category_id': '{{ category_id }}',
                        'product_id': item.data('product-id'),
                        'position': position,
                    },
                }).done(function(data) {
                    console.log(data);
                    $(".modal-backdrop").remove();
                    if (data != true) {
                        alert('{{ 'admin.product_rank.move_rank.error'|trans }}');
                        $("#product_rank_list > .sortable-container").sortable('cancel');
                    } else {
                        setupContextMenu(window.$children);
                    }
                }).fail(function() {
                    console.log('fail');
                    $(".modal-backdrop").remove();
                    alert('{{ 'admin.product_rank.move_rank.error'|trans }}');
                    $("#product_rank_list > .sortable-container").sortable('cancel');
                });
            };

            // ランク移動リンク
            $(".product_rank_move_rank_anchor").on("click", function(e) {
                e.preventDefault();
                $form = $('<form action="{{ url('admin_product_product_rank_move_rank') }}" method="POST" style="display:none;"></form>');
                $item = $(this).parents(".sortable-item");
                $form.append($('<input type="hidden" name="category_id"></input>').val($item.data("category-id")));
                $form.append($('<input type="hidden" name="product_id"></input>').val($item.data("product-id")));
                $form.append($('<input type="hidden" name="position"></input>').val($(this).siblings(".product_rank_move_rank_input").val()));
                $('body').append($form);
                $form.submit();
            });

        });
    </script>
{% endblock %}

{% block main %}
    <div class="c-outsideBlock">
        <div class="c-outsideBlock__contents mb-2">
            <div class="row">
                <div class="col-6">
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb mb-2 p-0">
                            <li class="breadcrumb-item">
                                <a href="{{ url('admin_product_category') }}">
                                    {{ 'admin.product_rank.move_rank.all_category'|trans }}
                                </a>
                            </li>
                            {% for ParentCategory in TargetCategory.path %}
                                {% if ParentCategory.id is not null %}
                                    <li class="breadcrumb-item active" aria-current="page">
                                        <a href="{{ url('admin_product_category_show', { parent_id : ParentCategory.id }) }}">
                                            {{ ParentCategory.name }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                {% if ProductCategories|length > 0 %}
                    <div class="card rounded border-0 mb-4">
                        <div class="card-body p-0">
                            <div class="card rounded border-0 mb-2" id="product_rank_list">
                                <ul class="list-group list-group-flush sortable-container">
                                    {% for ProductCategory in ProductCategories %}
                                        <li class="list-group-item sortable-item" data-rank="{{ ProductCategory.sort_no }}" data-category-id="{{ ProductCategory.category_id }}" data-product-id="{{ ProductCategory.product_id }}">
                                            <div class="row justify-content-around mode-view">
                                                <div class="col-auto d-flex align-items-center">
                                                    <i class="fa fa-bars text-ec-gray"></i>
                                                </div>
                                                <div class="col-auto d-flex">
                                                    <a href="{{ url('admin_product_product_edit', { id : ProductCategory.Product.id }) }}">
                                                        <img src="{{ asset(ProductCategory.Product.mainFileName|no_image_product, 'save_image') }}" style="max-width: 50px" />
                                                    </a>
                                                </div>
                                                <div class="col">
                                                    <a href="{{ url('admin_product_product_edit', { id : ProductCategory.Product.id }) }}">
                                                        {{ ProductCategory.Product.name }}
                                                    </a>
                                                    <br>
                                                    {% if ProductCategory.Product.code_min is not empty or ProductCategory.Product.code_max is not empty %}
                                                        <span>
                                                            {{ ProductCategory.Product.code_min }}
                                                            {% if ProductCategory.Product.code_min != ProductCategory.Product.code_max %} ～ {{ ProductCategory.Product.code_max }}
                                                            {% endif %}
                                                        </span>
                                                    {% endif %}
                                                    <span>
                                                        ({{ ProductCategory.Product.status }})
                                                    </span>
                                                </div>
                                                <div class="col-auto text-right">
                                                    <a class="btn btn-ec-actionIcon action-up mr-3 {% if loop.first %} disabled {% endif %}" href="{{ url('admin_product_product_rank_up', {category_id: ProductCategory.category_id, product_id: ProductCategory.product_id}) }}" {{ csrf_token_for_anchor() }} data-method="PUT" data-confirm="false">
                                                        <i class="fa fa-arrow-up fa-lg text-secondary"></i>
                                                    </a>
                                                    <a class="btn btn-ec-actionIcon action-down mr-3 {% if loop.last %} disabled {% endif %}" href="{{ url('admin_product_product_rank_down', {category_id: ProductCategory.category_id, product_id: ProductCategory.product_id}) }}" {{ csrf_token_for_anchor() }} data-method="put" data-confirm="false">
                                                        <i class="fa fa-arrow-down fa-lg text-secondary"></i>
                                                    </a>
                                                </div>
                                                <div class="col-auto text-right">
                                                    <div class="form-inline">
                                                        <div class="form-group">
                                                            <input class="product_rank_move_rank_input form-control" type="text" />
                                                        </div>
                                                        <a class="btn btn-default product_rank_move_rank_anchor" href="javascript:void(0);">{{ 'admin.product_rank.move_rank.th'|trans }}</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="card rounded border-0">
                        <div class="card-body p-4">
                            <div class="text-center text-muted">{{ 'admin.product_rank.move_rank.select_category'|trans }}</div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {# TODO: 選択中の項目をわかるように表示 #}
        {% macro tree(Category, TargetId, level) %}
            {% import _self as selfMacro %}
            {% set level = level + 1 %}
            <li>
                <label {% if Category.children|length > 0 %}class="collapsed" {% endif %}data-toggle="collapse"
                       href="#directory_category{{ Category.id }}" aria-expanded="false"
                       aria-controls="directory_category{{ Category.id }}">
                    <span>
                        <a href="{{ url('admin_product_product_rank_show', { category_id : Category.id }) }}">
                            {{ Category.name }} ({{ Category.children|length }})
                        </a>
                    </span>
                </label>
                {% if Category.children|length > 0 %}
                    <ul class="collapse" id="directory_category{{ Category.id }}">
                        {% for ChildCategory in Category.children %}
                            {{ selfMacro.tree(ChildCategory, TargetId, level) }}
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endmacro %}

        <div class="c-contentsArea__secondaryCol">
            <div class="c-secondaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <span class="card-title">
                            <a href="{{ url('admin_product_category') }}">{{ 'admin.product.category.401'|trans }}</a>
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="c-directoryTree mb-3">
                            {% import _self as renderMacro %}
                            {% for TopCategory in TopCategories %}
                                <ul>
                                    {{ renderMacro.tree(TopCategory, TargetCategory.Parent.id | default(null), 0) }}
                                </ul>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
